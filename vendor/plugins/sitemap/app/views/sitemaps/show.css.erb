/* ------------------------------------------------------------
	Base
------------------------------------------------------------ */
* {
	margin: 0;
	padding: 0;
}

html, body {
	height: 100%;
	margin: 0 0 1px 0;
	padding: 0;
}

body {
	font: 62.5% Verdana, Arial, sans-serif;
	color: #333;
	background: #fff;
}

#container {
	width: 700px;
	margin: 0 auto;
	padding: 60px 0 50px 0;
}

#site_and_page_title {
	border-bottom: 1px solid #ccc;
	padding-bottom: 18px;
	text-align: center;
}

#site_and_page_title h1 {
	color: #000;
	font: bold 4.4em Helvetica, Arial, sans-serif;
	margin-bottom: 30px;
}

#site_and_page_title h1 a,
#site_and_page_title h1 a:hover {
	color: #000;
	text-decoration: none;
}

#site_description p {
	color: #656565;
	font: italic 20px Tahoma, Georgia, Times New Roman, sans-serif;
	margin-bottom: 12px;
}

#site_footer {
	border-top: 1px solid #ccc;
	padding-top: 18px;
	text-align: center;
}

#content {
	padding: 20px 10px;
	position: relative;
}

h2 {
	border-bottom: 1px solid #eee;
	color: #000;
	font: bold 18px Helvetica, Arial, sans-serif;
	margin-bottom: 12px;
	padding-bottom: 6px;
}

p {
	font-size: 1.2em;
	line-height: 1.6;
	margin-bottom: 12px;
}

#content ul {
	list-style: square;
	padding-left: 14px;
}

#content ul li {
	font-size: 1.2em;
	margin-bottom: 5px;
}

#content ul#page_actions {
	list-style: none;
	padding-left: 0;
	position: absolute;
	top: 22px;
	right: 10px;
}

#content ul#page_actions li {
	font-size: 1.2em;
	margin-bottom: 0;
}

label {
	display: block;
	padding-bottom: 3px;
	text-transform: uppercase;
	font-size: 95%;
}

input[type=text] {
	font-size: 1.4em;
	width: 100%;
	padding: 5px
}

select {
	font-size: 1.4em;
	width: 40%;
	padding: 5px
}

/* ------------------------------------------------------------
	Nav Main
------------------------------------------------------------ */
#nav_main ul {
	list-style: none;
}

#nav_main ul li {
	display: inline;
	font-size: 1.6em;
	padding: 0 12px;
}

/* ------------------------------------------------------------
	Site Map
------------------------------------------------------------ */
#site_map {
	padding: 20px 45px;
}

#site_map dt {
	border-bottom: 1px solid #eee;
	color: #000;
	font: bold 18px Helvetica, Arial, sans-serif;
	margin-bottom: 12px;
	padding-bottom: 12px;
}

#site_map dt a,
#site_map dt a:hover {
	color: #000;
	text-decoration: none;
}

#site_map dd {
	border-bottom: 3px double #ccc;
	margin-bottom: 15px;
	padding-bottom: 15px;
}

#site_map dl dl {
	border-left: 4px solid #eee;
	margin-top: 15px;
}

#site_map dl dl dt {
	border-bottom: none;
	font-size: 14px;
	line-height: 1.6;
	margin: 0 0 3px 20px;
	padding: 0 0 3px 0;
}

#site_map dl dl dd {
	border-bottom: none;
	margin: 0 0 15px 20px;
	padding: 0 0 0 0;
}

#site_map ul {
	list-style: none;
}

#site_map li {
	font-size: 14px;
	line-height: 1.6;
}

/* ------------------------------------------------------------
	Links
------------------------------------------------------------ */
a {
	color: #36c;
	text-decoration: none;
}
	
a:hover {
	color: #933;
	text-decoration: underline;
}

/* Kill Dotted Lines in Firefox */
a:focus, a:active {
	outline: none;
}

/* ------------------------------------------------------------
	Common, Misc...
------------------------------------------------------------ */
.hidden, hr {
	display: none;
}

.clear {
	clear: both;
}